         function HertzzController($scope,$http) {
             $http.get("usuarios").success( function(response) {
                 $scope.alumnos = response;
              });
             /*$http.post("cursos", '{"codigo": "02", "nombre": "IPOO II"}').success( function(response) {
              });*/
             $scope.ButtonClick = function(){
            	 var Usuario = {
        				 usuario: $scope.user,
        				 contrasenha: $scope.password
        		 };
            	 $http.get("login", {params: {usuario: $scope.user, contrasenha: $scope.password}}).then( function(response) {
                 	console.log(response.data);
                 	if(response.data.equals("true")) {window.location.replace('/user.html?user='+$scope.user);}
           		 	else {$scope.Message = "Usuario o Contrasenha incorrecto"; console.log(response.data);}
            	 });
        		 
        	 } 
         }
